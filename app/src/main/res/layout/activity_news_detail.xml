<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Pengunguman Fakultas"
            android:textColor="#FF7A00"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_pin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_category"
            android:layout_margin="15dp"
            android:background="@drawable/pin_news" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@id/iv_pin"
            android:drawablePadding="5dp"
            android:text="Sekertaris Progdi S1 Sistem Informasi"
            app:drawableLeftCompat="@drawable/user"
            app:drawableTint="@color/purple_700" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_pin"
            android:drawableLeft="@drawable/date"
            android:drawablePadding="5dp"
            android:drawableTint="@color/purple_700"
            android:text="08 Juli 2000" />

        <TextView
            android:id="@+id/tv_nameNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:text="Informasi Administrasi FTI selama PPKM"
            android:textColor="@color/purple_500"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detailNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nameNews" />

    </RelativeLayout>
</ScrollView>